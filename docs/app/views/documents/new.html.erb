<h1>Documents#new</h1>
<% if !@document.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @document.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "well">
   <%= form_for @document, html: { multipart: true } do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <%= f.label :attachment %>
      <%= f.file_field :attachment %>
      <%= f.label :subtype %>
      <%= f.number_field :subtype, min: 0, max: 2 %>
      <%= f.label :image %>
      <%= f.file_field :image %>
      <%= f.label :description %>
      <%= f.text_area :description%>
      <%= f.submit "Save", class: "btn btn-primary" %>
   <% end %>
</div>
<p>Find me in app/views/documents/new.html.erb</p>
